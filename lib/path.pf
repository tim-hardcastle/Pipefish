import

golang "path"
golang "errors"

def

base(p string) -> string : golang {
    return path.Base(p)
}

clean(p string) -> string : golang {
    return path.Clean(p)
}

dir(p string) -> string : golang {
    return path.Dir(p)
}

ext(p string) -> string : golang {
    return path.Ext(p)
}

isAbs(p string) -> bool : golang {
    return path.IsAbs(p)
}

join(t tuple) -> string/error : golang {
    strings := []string{}
    for _, v := range(t) {
        switch v := v.(type) {
        case string :
            strings = append(strings, v)
        default :
            return errors.New("'join' function in 'path' library passed non-string type")
        }
    }
    return path.Join(strings...)
}

match(pattern, name string) -> string/error : golang {
    m, err := path.Match(pattern, name)
    if err != nil {
        return err
    }
    return m
}

split(p string) -> string, string : golang {
    return path.Split(p)
}